<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

<!--        <com.hynson.chart.BPChartMarkView-->
<!--            android:id="@+id/bp_chart"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@drawable/chart_bp_gradient"-->
<!--            app:textColor="#a6000000"-->
<!--            app:textSize="14sp"-->
<!--            android:visibility="visible"/>-->
        <com.hynson.chart.BPYaxisChart
            android:id="@+id/bp_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/chart_bp_gradient"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:centerXSize="0.5dp"
            app:centerXColor="@color/color_002c5b"
            app:YLineSize="1dp"
            app:YColor="@color/color_3300"
            app:textColorY="@color/color_a600"
            app:textSizeY="11sp"
            app:textPaddingLeft="4dp"
            app:textPaddingRight="4dp"
            app:targetPaddingEnd="4dp"
            app:targetPaddingBottom="3.5dp"
            android:visibility="visible"/>
        <com.hynson.chart.BPChartView
            android:id="@+id/chart_bp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_chart1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.hynson.chart.BPYaxisChart
            android:id="@+id/bp_chart1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/chart_bp_gradient"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:centerXSize="0.5dp"
            app:centerXColor="@color/color_002c5b"
            app:YLineSize="1dp"
            app:YColor="@color/color_3300"
            app:textColorY="@color/color_a600"
            app:textSizeY="11sp"
            app:textPaddingLeft="4dp"
            app:textPaddingRight="4dp"
            app:targetPaddingEnd="4dp"
            app:targetPaddingBottom="3.5dp"
            android:visibility="visible"/>
        <com.hynson.customview.weight.RulerView
            android:id="@+id/ruler_weight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ruler_color="#002c5b"
            app:ruler_line_size="0.5dp"
            app:ruler_radius="2.5dp"
            app:ruler_space="50dp"
            app:text_color="#73000000"
            app:text_ruler_space="12dp"
            app:text_size="12sp" />
<!--        <com.hynson.chart.BPChartView-->
<!--            android:id="@+id/chart_bp1"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent" />-->

    </FrameLayout>
</LinearLayout>