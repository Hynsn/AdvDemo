<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="Activity"
            type="com.example.MainActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_customview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{Activity.test}"
            android:text="Customview"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btn_databinding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{Activity.test}"
            android:text="DataBinding"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btn_crashed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{Activity.test}"
            android:text="testCrash"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btn_mbedtls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{Activity.test}"
            android:text="testMbedtls"
            android:textSize="18sp" />
    </LinearLayout>
</layout>
