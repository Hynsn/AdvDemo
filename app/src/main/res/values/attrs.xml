<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="nt">
        <attr name="size" format="dimension"/>
        <attr name="space" format="dimension"/>
        <attr name="padding" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="RulerView" tools:ignore="ResourceName">
        <attr name="ruler_space" format="dimension"/>
        <attr name="ruler_radius" format="dimension"/>
        <attr name="ruler_color" format="color"/>
        <attr name="ruler_line_size" format="dimension"/>
        <attr name="text_color" format="color"/>
        <attr name="text_size" format="dimension"/>
        <attr name="text_ruler_space" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="flowLayout">
        <attr name="flowLayoutTextSize" format="integer" />
        <attr name="verticalSpacingSize" format="integer" />
        <attr name="childViewPadding" format="integer" />
        <attr name="horizontalSpacingSize" format="integer" />
        <attr name="deleteIconWidth" format="integer" />
        <attr name="deleteIconMargin" format="integer" />
        <attr name="deleteIcon" format="reference"/>
        <attr name="tagHeight" format="integer" />
        <attr name="selectViewBackground" format="reference" />
        <attr name="selectTextColor" format="color" />
        <attr name="defaultViewBackground" format="reference" />
        <attr name="defaultTextColor" format="color" />
        <attr name="fixViewEditingBackground" format="reference" />
        <attr name="fixViewTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="BPChartMarkView">
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BPYaxisChart">
        <attr name="centerXColor" format="color"/>
        <attr name="centerXSize" format="dimension"/>
        <attr name="YColor" format="color"/>
        <attr name="YLineSize" format="dimension"/>
        <attr name="TargetMinColor" format="color"/>
        <attr name="TargetMaxColor" format="color"/>
        <attr name="textColorY" format="color"/>
        <attr name="textSizeY" format="dimension"/>
        <attr name="targetPaddingEnd" format="dimension"/>
        <attr name="targetPaddingBottom" format="dimension"/>
        <attr name="axisXBottom" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="BPXaxisChart">
        <attr name="textColorX" format="color"/>
        <attr name="textSizeX" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="BPBarView">
        <attr name="bar_text" format="string"/>
        <attr name="bar_text_color" format="color"/>
        <attr name="bar_text_size" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="ExpandTextView">
        <attr name="maxCollapsedLines" format="integer"/>
        <attr name="animDuration" format="integer"/>
        <attr name="animAlphaStart" format="float"/>
        <attr name="expandDrawable" format="reference"/>
        <attr name="collapseDrawable" format="reference"/>
        <attr name="arrowAlign" format="enum">
            <enum name="bottom" value="0"/>
            <enum name="top" value="1"/>
            <enum name="center" value="2"/>
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
        </attr>
        <attr name="arrowPosition" format="enum">
            <enum name="right" value="0"/>
            <enum name="below" value="1"/>
        </attr>
        <attr name="arrowPadding" format="dimension"/>
    </declare-styleable>
</resources>